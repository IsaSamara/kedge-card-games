@page "/ranking"

<MudBreadcrumbs Items="_items" Separator=">" />

<h1 style="text-align: center;"><strong>Ranking Pokémon</strong></h1>
<h2 style="text-align: center;">🏆 Melhores duelistas do mês!</h2>
<h3 style="text-align: center;">Fora do ranking? Não desanime. Bora treinar pra entrar no próximo!</h3>

<MudPaper Class="pa-4" style="margin:50px;">
    <MudTable Items="@jogadores.Take(10)" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>Posição</MudTh>
            <MudTh>Nome</MudTh>
            <MudTh>Pontos</MudTh>
        </HeaderContent>

        <RowTemplate Context="jogador">
            <MudTd DataLabel="Posição">
                @if (jogador.Posicao == 1)
                {
                    <span style="color: gold;">🥇 @jogador.Posicao</span>
                }
                else if (jogador.Posicao == 2)
                {
                    <span style="color: silver;">🥈 @jogador.Posicao</span>
                }
                else if (jogador.Posicao == 3)
                {
                    <span style="color: #cd7f32;">🥉 @jogador.Posicao</span>
                }
                else
                {
                    @jogador.Posicao
                }
            </MudTd>

            <MudTd DataLabel="Nome">
                <MudTooltip Text="@jogador.Descricao">
                    <span style="cursor: help;">@jogador.Nome</span>
                </MudTooltip>
            </MudTd>

            <MudTd DataLabel="Pontos">
                <div>@jogador.Pontos pts</div>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

<MudPaper Class="pa-4 mt-6" Style="text-align: center;">
    <MudCard Style="max-width: 400px; margin: auto;">
        <MudCardContent>
            <MudText Typo="Typo.h6">🃏 Curte duelos de Yu-Gi-Oh!?</MudText>
            <MudText Typo="Typo.subtitle2" Class="mb-2">Veja o ranking dos duelistas lendários!</MudText>
            <MudButton Href="ranking-yugioh" Color="Color.Secondary" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.SportsEsports">
                Ver ranking YU-GI-OH!
            </MudButton>
        </MudCardContent>
    </MudCard>
</MudPaper>

